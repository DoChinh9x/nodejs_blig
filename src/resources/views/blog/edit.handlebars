<div class="mt-4">
    <h3>Sửa bài</h3>

        <form class="mt-4" method="POST" action="/blogs/{{blog._id}}?_method=PUT">
            <div class="form-group">
                <label for="title">Tiêu đề</label>
                <input type="text" class="form-control" value="{{blog.title}}" id="title" name="title" >
            </div>
            <div class="form-group">
                <label for="body">Nội dung</label>
                <textarea class="form-control" id="body" name="body">{{blog.body}}</textarea>
            </div>
            <div class="form-group">
                <label for="videoId">VideoId</label>
                <input type="text" class="form-control" value="{{blog.videoId}}" id="videoId" name="videoId" >
            </div>
            <button type="submit" class="btn btn-primary">Lưu Lại</button>
        </form>
</div>